{
  "name": "real-time-coverage",
  "description": "Real time code coverage information for JavaScript",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "version": "0.0.0-semantic-release",
  "bugs": "https://github.com/bahmutov/real-time-coverage/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run deps",
        "npm test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "files": [
    "index.js",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/real-time-coverage#readme",
  "keywords": [
    "code coverage",
    "cover",
    "coverage",
    "real time",
    "realtime"
  ],
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/real-time-coverage.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok",
    "format": "standard-format -w index.js src/*.js report/index.js",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose index.js src/*.js report/index.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "instrument": "no! istanbul instrument examples/calc.js > examples/calc-instrumented.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "cover-calc": "nyc -r html node examples/calc.js",
    "report": "webpack"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.8.2",
    "deps-ok": "1.1.0",
    "git-issues": "1.2.0",
    "istanbul": "0.4.3",
    "license-checker": "5.1.1",
    "mocha": "2.4.5",
    "nsp": "2.3.0",
    "nyc": "6.4.0",
    "pre-git": "3.8.3",
    "semantic-release": "^4.3.5",
    "standard": "6.0.8",
    "standard-format": "2.1.1"
  },
  "dependencies": {
    "@cycle/core": "6.0.3",
    "@cycle/dom": "9.4.0",
    "check-more-types": "2.20.2",
    "lazy-ass": "1.4.0",
    "raw-loader": "0.5.1",
    "rx": "4.1.0",
    "webpack": "1.12.15"
  }
}
